---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="hero min-h-screen text-primary bg-primary-content">
		  <div class="hero-content text-center">
				<div class="max-w-md" x-data="{my_num: Math.floor(Math.random()*101)}">
		      <h1 id="greeting" class="text-5xl font-bold">{SITE_TITLE}</h1>
		      <p class="py-6">Welcome to my site</p>
		      <button
						class="btn btn-secondary"
						@click="my_num = Math.floor(Math.random()*101)"
						x-init="$watch('my_num', () => {$el.outerHTML = $el.outerHTML;htmx.process(document.body);});"
						x-bind:hx-get="'api/greetings/'+my_num"
						hx-swap="none"
					>
						Hey There
					</button>
				</div>
		  </div>
		</main>
		<Footer />
	</body>
</html>
